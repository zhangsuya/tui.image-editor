.{prefix}-submenu-images {
        position: relative;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        // min-width: 30rem;
        overflow: hidden;
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        align-items: center;
        .{prefix}-submenu-images-item {
            position: relative;
            width: 45%;
            height: 0;
            // max-width: 10vw;
            padding-bottom: 45%;
            margin: 0 0.3rem;
            float: left;
            line-height: 0;
            opacity: 0.25;
            cursor: pointer;
            transition: all 0.4s ease;
            -webkit-transition: all 0.4s ease;
            &:first-child,
            &:last-child {
            &:after {
                position: absolute;
                content: "";
                display: inline-block;
                height: 0.4rem;
                width: 0.4rem;
                border-radius: 6rem;
                background: RGBA(44, 183, 245, 1);
                top: 1.4rem;
                opacity: 0;
                transform: scale(0);
                -webkit-transform: scale(0);
                transition: all 0.6s ease;
                -webkit-transition: all 0.6s ease;
            }
            &.invisible:after {
                opacity: 1;
                transform: scale(1);
                -webkit-transform: scale(1);
            }
            }
            &:first-child:after {
            top: -1rem;
            }
            &:last-child:after {
            bottom: -1rem;
            }
            &.invisible {
            width: 0;
            margin: 0;
            }
            &:before {
            content: "";
            display: inline-block;
            height: 0.3rem;
            width: 100%;
            border-radius: 5rem;
            background: RGBA(44, 183, 245, 1);
            }
            &.active,
            &:hover {
            opacity: 0.85 !important;
            }
            &.preview {
            border: 1px solid #eee;
            opacity: 0.5;
            box-sizing: border-box;
            &.active,
            &:hover {
                border: 1px solid RGBA(44, 183, 245, 1);
            }
            &:first-child,
            &:last-child {
                &:after {
                content: "";
                display: inline-block;
                height: 2rem;
                width: 0.1rem;
                background: rgba(255, 255, 255, 0.8);
                position: absolute;
                top: 0.5rem;
                opacity: 0;
                transform: scaleY(0);
                -webkit-transform: scaleY(0);
                transition: all 0.6s ease;
                -webkit-transition: all 0.6s ease;
                }
                &.invisible:after {
                opacity: 1;
                transform: scaleY(1);
                -webkit-transform: scaleY(1);
                }
            }
            &.invisible {
                border: none !important;
            }
            &:before {
                display: none;
            }
            .image {
                width: 100%;
                padding-bottom: 100%;
                height: 0;
                background-size: cover !important;
                background-position: center !important;
                overflow: hidden;
            }
            }
        }
    }